@import "_purecss-extra"

body
	background-color: #F1F1F1
	color: #777
	font-family: 'Open Sans', sans-serif
a
	color: #999
	text-decoration: none
	&:hover
		text-decoration: underline
p
	margin: 0

#login
	padding: 5% 0 0 0
	width: 330px
	margin: 0 auto
.box-center
	padding: 1.5em
	overflow: hidden
	background: #FFF none repeat scroll 0% 0%
	box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.13)
.right
	text-align: right
