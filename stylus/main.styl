@import "_purecss-extra"

html
	box-sizing: border-box
*, *:before, *:after
	box-sizing: inherit

body
	background-color: #F1F1F1
	color: #777
	font-family: 'Open Sans', sans-serif
a
	color: #999
	text-decoration: none
	&:hover
		text-decoration: underline
p
	margin: 0

#decision,
#login
	padding: 5% 0 0 0
	width: 330px
	margin: 0 auto
.box-center
	padding: 1.5em
	overflow: hidden
	background: #FFF none repeat scroll 0% 0%
	box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.13)
.right
	text-align: right

#decision
	text-align: center
	fieldset
		border:0
	.email
		span
			font-weight: bold
	.inform-question
		padding: 1em 0
	.client
		width: 100%
		padding: .6em
		background-color: lightness(#000, 30%)
		color: #fff
	.decision-question
		padding: 2em 0 1em
	.pure-button-success
		float: left
	.pure-button-error
		float: right
